<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Intro"
android:background="#dcdde8"
android:orientation="vertical">

<ImageView
    android:layout_width="119dp"
    android:layout_height="119dp"
    android:background="@drawable/home"
    android:layout_marginTop="50dp"
    android:layout_gravity="center"

    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="0dp"
    android:fontFamily="@font/cartoonbold"
    android:text="BUDONGSAN"
    android:textSize="60dp" />


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="330dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_name"
            android:textSize="40dp"
            android:textColor="#000000"
            android:gravity="center_vertical" />


        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_addr"
            android:textSize="30dp"
            android:textColor="#666666" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_price"
            android:textSize="25dp"
            android:textColor="#707afa" />



        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="타입"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_type"
            android:textSize="25dp"
            android:textColor="#666666" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="층"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_floor"
            android:textSize="25dp"
            android:textColor="#666666"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="면적"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_weight"
            android:textSize="25dp"
            android:textColor="#666666" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고년도"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_year"
            android:textSize="25dp"
            android:textColor="#666666" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건축년도"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_year2"
            android:textSize="25dp"
            android:textColor="#666666" />



        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래번호"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_id"
            android:textSize="25dp"
            android:textColor="#666666" />





    </LinearLayout>
</LinearLayout>





<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_name"
            android:textSize="30dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_weight="2" />


        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_addr"
            android:textSize="20dp"
            android:textColor="#666666"
            android:layout_weight="1" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:fontFamily="@font/cartoonbold"
            android:id="@+id/apart_price"
            android:textSize="20dp"
            android:textColor="#707afa"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="타입"
                android:fontFamily="@font/cartoonbold"
                android:id="@+id/apart_type"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_weight="1" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="층"
                android:fontFamily="@font/cartoonbold"
                android:id="@+id/apart_floor"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_weight="1" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="면적"
                android:fontFamily="@font/cartoonbold"
                android:id="@+id/apart_weight2"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_weight="1" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건축년도"
                android:fontFamily="@font/cartoonbold"
                android:id="@+id/apart_year2"
                android:textSize="16dp"
                android:textColor="#666666"
                android:layout_weight="1" />



        </LinearLayout>








    </LinearLayout>



</LinearLayout>